{% extends 'base.html.twig' %}

{% block title %}Hello TagController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Tag List</h1>
        <form id="form-search-tag">
            <div class="input-group mb-3">
                <input name="name" type="text" class="form-control" placeholder="Tag name" aria-label="Tag name" aria-describedby="search-tag">
                <button class="btn btn-outline-secondary" type="submit" id="search-tag">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>

        <table class="table table-dark table-striped">
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
            {% for tag in allTags %}
                <tr>
                    <td>{{ tag.id }}</td>
                    <td>{{ tag.name }}</td>
                </tr>          
            {% else %}
                <tr>
                    <td colspan="100%">No tags found.</td>
                </tr> 
            {% endfor %}
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="js/tag.js"></script>
{% endblock %}
